<configuration>

    <!-- Console appender -->
    <appender name="COLORFUL_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] %highlight(%logger{35}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Transaction file appender -->
    <appender name="LOGGING_FILE" class="ch.qos.logback.core.FileAppender">
        <file>report-logging.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define loggers -->
    <logger name="logging" level="INFO" additivity="false">
        <appender-ref ref="LOGGING_FILE"/>
    </logger>
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="COLORFUL_CONSOLE"/>
    </root>

</configuration>
